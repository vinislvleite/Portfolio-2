<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projetos | Vinícius Leite</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/projetos.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container my-5">
    <h1>Meus Projetos:</h1>

    <% projetos.forEach((projeto, index) => { %>
      <div class="projetos">
        <h2><%= projeto.titulo %></h2>
        <p><strong>Descrição:</strong> <%= projeto.descricao %></p>
        <p><strong>Solução:</strong> <%= projeto.solucao %></p>
        <p><a href="<%= projeto.link %>" target="_blank">Link para o projeto</a></p>

        <p>Imagens do projeto:</p>
        <div id="carousel<%= index %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <% projeto.imagens.forEach((img, i) => { %>
              <button type="button" data-bs-target="#carousel<%= index %>" data-bs-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>"></button>
            <% }) %>
          </div>

          <div class="carousel-inner">
            <% projeto.imagens.forEach((img, i) => { %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <img src="<%= img %>" class="d-block w-100" alt="Imagem do projeto">
              </div>
            <% }) %>
          </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= index %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Anterior</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= index %>" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Próximo</span>
          </button>
        </div>
      </div>
    <% }) %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>